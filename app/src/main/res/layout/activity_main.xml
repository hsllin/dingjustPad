<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:expandable="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0px"
        android:paddingRight="0px"
        android:paddingTop="0px"
        android:paddingBottom="0px"
        tools:context=".ui.activity.MainActivity">

    <!--总体布局-->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!--左布局-->
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/order"
                android:shadowColor="@color/black"
        >
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
            >
                <VideoView
                        android:id="@+id/video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                />

            </LinearLayout>
            <!--图片描述列表-->
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
            >

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/material_detail"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <ProgressBar
                        android:id="@+id/photoProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone"

                />
            </LinearLayout>


        </LinearLayout>
        <!--居中布局-->
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/user"
                android:shadowColor="@color/black"

        >
            <ExpandableListView
                    android:id="@+id/elv_local_data"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />

        </LinearLayout>
        <!--右侧布局-->
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
        >
            <TextView
                    android:id="@+id/user"
                    android:text="@string/user"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/user"
                    android:shadowColor="@color/black"
                    android:gravity="center"
                    android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/units"
                    android:background="@drawable/user"
                    android:shadowColor="@color/black"
                    android:text="@string/units"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/count_time"
                    android:background="@drawable/user"
                    android:shadowColor="@color/black"
                    android:text="@string/count_time"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <Button
                    android:id="@+id/qualityPro"
                    android:background="@drawable/quality_pro"
                    android:shadowColor="@color/black"
                    android:text="@string/qualityPro"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <Button
                    android:id="@+id/start_pause"
                    android:background="@drawable/start_pause"
                    android:shadowColor="@color/black"
                    android:text="@string/start_pause"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <Button
                    android:id="@+id/finish"
                    android:background="@drawable/finish"
                    android:shadowColor="@color/black"
                    android:text="@string/finish"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <Button
                    android:id="@+id/logout"
                    android:background="@drawable/logout"
                    android:shadowColor="@color/black"
                    android:text="@string/logout"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

